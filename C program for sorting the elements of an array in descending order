#include<stdio.h>
#include<conio.h>
#include<stdlib.h>
void main()
{
    int *arr,temp,i,j,n;
    printf("Enter the number of elements in the array");
    scanf("%d",&n);
    arr = (int*)malloc(sizeof(int)*n); 
    for(i=0;i<n;i++)
    {
        printf("nEnter a number:");
        scanf("%d",&arr[i]);
    }
    for(i=0;i<n;i++)
    {
        for(j=i+1;j<n;j++)
        {
            if(arr[i]<arr[j])
            {
                temp=arr[i];
                arr[i]=arr[j];
                arr[j]=temp;
            }
        }
    }
    printf("Elements of array in descending order aren");
    for(i=0;i<n;i++)
        printf("%dt",arr[i]);
    getch();
}
